@model IEnumerable<Folder>

@{
    ViewBag.Title = "Folder List";
}



<div class="row">
    <div class="col-sm-8">
        <a asp-controller="Home" asp-action="Create"
           class="btn btn-primary m-1">Add New Folder</a>
    </div>
</div>
<div class="row">
    <div class="col-sm-8">
        <a asp-controller="TestCase" asp-action="Create"
           class="btn btn-primary m-1">Add New TestCase</a>
    </div>
</div>

<div class="row">
    <div class="col-sm-8">
        <a asp-controller="TestCase" asp-action="Delete"
           class="btn btn-primary m-1">Delete TestCase</a>
    </div>
</div>
<hr/>
<h3>Folder List</h3>
<hr/>

<div class="card-deck">

    @foreach (var folder in Model)
    {


        <div class="card m-3" style="min-width:18rem; max-width:30.5%">
            <div class="card-header">
                <h3> @folder.Name</h3>
            </div>

            <div class="card-footer text-center">
                <a asp-controller="TestCase" asp-action="Show"
                   asp-route-id="@folder.FolderId" class="btn btn-primary m-1">Show TestCases</a>

                <a asp-action="Create" asp-controller="TestCase"
                   class="btn btn-primary m-1">Add TestCase</a>
                @*<a href="#" class="btn btn-danger m-1">Delete TestCase</a>*@
            </div>
        </div>

    }
</div>
