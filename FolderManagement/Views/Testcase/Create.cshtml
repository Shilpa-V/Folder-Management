@model TestCase

@{
    ViewBag.Title = "Create TestCase";
}

<form enctype="multipart/form-data" asp-action="Create" asp-controller="testcase" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="TestCaseType" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="TestCaseType" class="custom-select mr-sm-2"
                    asp-items="Html.GetEnumSelectList<TestCaseType>()">
                <option value="">Please Select</option>
            </select>
            <span asp-validation-for="TestCaseType" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="StepCount" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="StepCount" class="form-control" placeholder="StepCount" />
            <span asp-validation-for="StepCount" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="FolderId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="FolderId" class="custom-select mr-sm-2"
                    asp-items='@(new SelectList(ViewBag.Folders,"FolderId","Name"))'>
                <option value="">None</option>
            </select>
            <span asp-validation-for="FolderId" class="text-danger"></span>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-sm-2">
            <button type="submit" class="btn btn-primary">Create</button>
        </div>
        <div class="col-sm-10">
            <button asp-action="Index" asp-controller="Home" class="btn btn-primary">Back</button>
        </div>

    </div>

    @section Scripts {

    }


</form>
